
<script src="/lib/ember-0.9.8.1.js"></script>
<script src="/utils.js"></script>
<script src="/app.js"></script>

<div id="app">
<script type="text/x-handlebars" data-template-name="friend" id="friend">
	{{#view App.FriendView}}
	<div class="container">
		<div id="alert">{{alert}}</div>
		<h1 id="name">{{friend.fullName}}</h1>
    	<div class="divider"></div>
    	
    	<div id="imagecontainer">
    		<img {{bindAttr src="friend.photo"}} height="165" width="300"/>
	    	<div id="imageoverlay">
	    		<div id="arrowright"></div>
	    		<div id="addanote">{{friend.tagline}}</div>
	    	</div>
    	</div>
    	<div id="connectorskip">
    		<a href="#" {{action "connect"}}><img id="connect" src="img/connect_btn.jpg" width="231px" height="44px"/></a>
    		<a href="#" {{action "skip"}}>
    		<img id="skip" src="img/skip_btn.jpg" width="64px" height="44px" /></a>
    	</div>
		<div id="info">
	    	<div id="about">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.description}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
	    	
	    	
	    	<div id="work">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.profession}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
	    	
	    	<div id="live">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.location}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
    	</div>   
    {{/view}}
</script>

<script type="text/x-handlebars" data-template-name="connect" id="connect">	
	{{#view App.ConnectView}}
<div class="container">
<h1 id="name">{{friend.fullName}}</h1>
    		<div id="sendsocialnetworks">
    			<a href="#" {{action "selectMail"}} {{bindAttr id="friend.services.one"}}><img id="mail" src="img/social_networks/gcontacts_grey.png" width="46" heigh="46"/></a>
    			<a href="#" {{action "selectLinkedIn"}} {{bindAttr id="friend.services.two"}}><img id="linkedin" src="img/social_networks/linkedin_grey.png" width="46" heigh="46" /></a>
    			<a href="#" {{action "selectTwitter"}} {{bindAttr id="friend.services.three"}}><img id="twitter" src="img/social_networks/twitter_grey.png" width="46" heigh="46" />
    			</a>
    		</div>
	<form id="contact">
    		<textarea id="messageText">Enter a message here ...</textarea>
    	
    	<div id="sendvia">
    		<div id="sendviatext">
    		<a href="#" {{action "send"}}>Send message!</a>
    		</div>
    	</div>
	    	<div style="clear:both"></div>	
    	</form>
    	<div id="info">
	    	<div id="about">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.description}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
	    	
	    	<div id="work">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.profession}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
	    	
	    	<div id="live">
	    		<div id="container">
		    		<div id="icon">
		    		</div>
		    		<div id="text">
		    			{{friend.location}}
		    		</div>
	    		</div>
	    	</div>
	    	<div style="clear:both"></div>
	    	<div id="divider"></div>
    	</div>  
	</div>
	{{/view}}
</script>

<script type="text/x-handlebars" data-template-name="skip" id="skip">
	<h2>Skip</h2>
	{{#view App.SkipView}}
		 
	{{/view}}
</script>
</div>	

